@model ShouldITweetClient.Models.VerbotenPhraseDto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Verboten Phrase</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)


        <div class="row top-buffer">

            <div class="col-lg-12">
               

                    <div class="form-group">
                        <div><label for="Phrase">Phrase</label></div>
                        <div>
                            @Html.TextBox("Phrase", Model.Phrase, new Dictionary<string, object>() { { "rows", 10 }, { "class", "form-control input-lg" } })

                            <div class="h4 text-danger">@Html.ValidationMessageFor(m => m.Phrase)</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-send" type="submit">
                            <span class="glyphicon glyphicon-send"></span>  Save
                        </button>
                    </div>
                
                   
                
            </div>

        </div>

        
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
